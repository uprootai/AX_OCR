{
  "$schema": "https://claude.ai/schemas/claude-code-settings.json",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "command": [".claude/hooks/pre-edit-check.sh"]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "command": [".claude/hooks/post-bash-log.sh"]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "command": [".claude/hooks/on-stop.sh"]
      }
    ]
  }
}
